<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout

        android:layout_above="@+id/hoome_bottomly"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/param_0.5dp"
        />

    <RelativeLayout
        android:layout_above="@+id/hoome_bottomly"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dj_dim"
        />
<include
    android:id="@+id/hoome_bottomly"
    android:layout_alignParentBottom="true"
    layout="@layout/bottom_main"
    android:layout_height="@dimen/param_50dp"
    android:layout_width="match_parent"

    />


</RelativeLayout>